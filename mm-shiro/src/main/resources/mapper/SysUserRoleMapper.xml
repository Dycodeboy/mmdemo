<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wdsite.shiro.mapper.SysUserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wdsite.shiro.entity.SysUserRole">
        <result column="user_id" property="userId" />
        <result column="role_id" property="roleId" />
    </resultMap>
    
    <!-- User查询映射结果 -->
    <resultMap id="UserMap" type="com.wdsite.shiro.entity.SysUser">
        <id column="id" property="id" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="name" property="name" />
        <result column="salt" property="salt" />
        <result column="last_login_time" property="lastLoginTime" />
        <result column="available" property="available" />
        <result column="REMOVED" property="removed" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- Role查询映射结果 -->
    <resultMap id="RoleMap" type="com.wdsite.shiro.entity.SysRole">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parent_id" property="parentId" />
        <result column="description" property="description" />
        <result column="available" property="available" />
        <result column="REMOVED" property="removed" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    
    <select id="getUsersByRoleId" resultMap="UserMap">
		SELECT u.*, ur.role_id
		FROM sys_user u, sys_user_role ur
		WHERE u.id=ur.user_id AND ur.role_id=#{id}
	</select>
	
	<select id="getRolesByUserId" resultMap="RoleMap">
		SELECT r.*, ur.user_id
		FROM sys_role r, sys_user_role ur
		WHERE r.id=ur.role_id AND ur.user_id=#{id}
	</select>
	
</mapper>
