<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wdsite.shiro.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wdsite.shiro.entity.SysUser">
        <id column="id" property="id" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="name" property="name" />
        <result column="salt" property="salt" />
        <result column="last_login_time" property="lastLoginTime" />
        <result column="available" property="available" />
        <result column="REMOVED" property="removed" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <insert id="saveUserRole" parameterType="com.wdsite.shiro.entity.SysUser">
    	insert into user_role(
			user_id,role_id
		) values
		<foreach collection="roles" item="role" separator=",">
			(${id},#{role.id})
		</foreach>
    </insert>
    
    <select id="getRolesByUserId" resultType="com.wdsite.shiro.entity.SysRole">
    	SELECT r.*
		FROM sys_role r
		RIGHT JOIN sys_user_role ur ON r.id=ur.role_id
		WHERE ur.user_id=#{userId}
    </select>
    

</mapper>
